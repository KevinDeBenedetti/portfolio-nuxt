{
  // oxfmt configuration - Prettier compatible
  // Documentation: https://oxc.rs/docs/guide/usage/formatter/config-file-reference

  // Base options
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "lf",

  // Experimental options
  "experimentalSortImports": {},
  "experimentalSortPackageJson": true,

  // Embedded code formatting
  "embeddedLanguageFormatting": "auto",

  // File type specific configuration
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "*.md",
      "options": {
        "proseWrap": "preserve"
      }
    },
    {
      "files": "*.vue",
      "options": {
        "parser": "vue"
      }
    }
  ]
}
