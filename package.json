{
  "name": "portfolio-nuxt",
  "version": "1.4.7",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "typecheck": "nuxt typecheck",
    "lint": "oxlint --config config/.oxlintrc.json .",
    "lint:type": "oxlint --config config/.oxlintrc.json --type-aware",
    "lint:fix": "oxlint --config config/.oxlintrc.json --fix --fix-suggestions .",
    "lint:fix:all": "oxlint --config config/.oxlintrc.json --fix --fix-suggestions --fix-dangerously .",
    "format": "oxfmt --config config/.oxfmtrc.json .",
    "format:check": "oxfmt --config config/.oxfmtrc.json --check .",
    "check": "turbo run lint format:check typecheck --parallel",
    "hooks:install": "prek install --hook-type pre-commit --hook-type pre-push --hook-type commit-msg",
    "hooks:uninstall": "prek uninstall",
    "hooks:run": "prek run --all-files",
    "hooks:list": "prek list",
    "clean": "rm -rf .nuxt .output .pnpm-store node_modules .data .turbo .vercel"
  },
  "dependencies": {
    "@nuxt/content": "^3.11.2",
    "@nuxt/fonts": "^0.13.0",
    "@nuxt/image": "2.0.0",
    "@nuxt/scripts": "0.13.2",
    "@nuxt/ui": "^4.4.0",
    "@nuxtjs/i18n": "^10.2.3",
    "@nuxtjs/robots": "^5.7.0",
    "@nuxtjs/sitemap": "^7.6.0",
    "@unhead/vue": "^2.1.4",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "better-sqlite3": "^12.6.2",
    "nuxt": "^4.3.1",
    "nuxt-security": "^2.5.1",
    "typescript": "5.9.3",
    "vue": "^3.5.28",
    "vue-router": "^5.0.2"
  },
  "devDependencies": {
    "@iconify-json/circle-flags": "^1.2.10",
    "@iconify-json/heroicons": "^1.2.3",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/solar": "^1.2.5",
    "@j178/prek": "^0.3.2",
    "@nuxt/devtools": "3.1.1",
    "@nuxt/icon": "^2.2.1",
    "@tailwindcss/vite": "^4.1.18",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "oxlint-tsgolint": "^0.11.5",
    "tailwindcss": "^4.1.18",
    "turbo": "^2.8.3",
    "vue-tsc": "^3.2.4"
  },
  "packageManager": "pnpm@10.26.2",
  "pnpm": {
    "overrides": {
      "fast-xml-parser": ">=5.3.5",
      "@isaacs/brace-expansion": ">=5.0.1",
      "axios": ">=1.13.5"
    }
  }
}
