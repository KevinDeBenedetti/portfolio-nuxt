{
  "name": "portfolio-nuxt",
  "version": "1.0.2",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "typecheck": "nuxt typecheck",
    "lint": "oxlint .",
    "lint:type": "oxlint --type-aware",
    "lint:fix": "oxlint --fix --fix-suggestions .",
    "lint:fix:all": "oxlint --fix --fix-suggestions --fix-dangerously .",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "check": "turbo run lint format:check typecheck --parallel",
    "hooks:install": "prek install --hook-type pre-commit --hook-type pre-push --hook-type commit-msg",
    "hooks:uninstall": "prek uninstall",
    "hooks:run": "prek run --all-files",
    "hooks:list": "prek list"
  },
  "dependencies": {
    "@nuxt/content": "^3.9.0",
    "@nuxt/fonts": "^0.12.1",
    "@nuxt/image": "2.0.0",
    "@nuxt/scripts": "0.13.2",
    "@nuxt/test-utils": "3.21.0",
    "@nuxt/ui": "^4.3.0",
    "@nuxtjs/i18n": "^10.2.1",
    "@nuxtjs/robots": "^5.6.7",
    "@nuxtjs/sitemap": "^7.5.0",
    "@unhead/vue": "^2.0.19",
    "better-sqlite3": "^12.5.0",
    "nuxt": "^4.2.2",
    "typescript": "5.9.3",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@iconify-json/circle-flags": "^1.2.10",
    "@iconify-json/lucide": "1.2.82",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/solar": "^1.2.5",
    "@j178/prek": "^0.2.23",
    "@nuxt/devtools": "3.1.1",
    "@nuxt/eslint": "^1.12.1",
    "@nuxt/eslint-config": "^1.12.1",
    "@nuxt/icon": "^2.1.1",
    "@tailwindcss/vite": "^4.1.18",
    "eslint": "^9.39.2",
    "eslint-plugin-oxlint": "^1.35.0",
    "oxfmt": "^0.20.0",
    "oxlint": "^1.35.0",
    "oxlint-tsgolint": "^0.10.0",
    "tailwindcss": "^4.1.18",
    "turbo": "^2.7.1",
    "vue-tsc": "^3.2.1"
  },
  "packageManager": "pnpm@10.11.0"
}
